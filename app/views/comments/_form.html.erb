<div class="well">
	<%= simple_form_for([@commentable, @comment]) do |f| %>
	  <%= f.error_notification %>
	  <fieldset class="fields">
	    <p>
        <%= f.input :text, placeholder: 'New comment...', label: false, :input_html => { :rows => 10 } %>
	    </p>
	    <p>
	      <%= f.submit :class => 'btn btn-success' %> <%= link_to('Cancel', [@commentable], :class => 'btn btn-danger') %>
	    </p>
	  </fieldset>
	<% end %>	
</div>
