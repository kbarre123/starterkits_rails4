<%= simple_form_for @business do |f| %>
  <%= f.error_notification %>
  <p>
    <%= f.input :title %>
  </p>

  <fieldset class="fields">
    <legend>Address</legend>
    <div>
      <%= f.input :street %>
      <%= f.input :city, priority: [ 'Zachary' ], collection: [ 'Zachary', 'Slaughter', 'Clinton', 'St. Francisville'] %>
      <%= f.input :state, priority: [ 'Louisiana' ], collection: [ 'Louisiana' ] %>
      <%= f.input :zip_code, priority: ['70791'], collection: [ '70791', '70777', '70722', '70775']  %>
      <%= f.input :map_heading %>
    </div>
  </fieldset>
  <br>
  <fieldset class="fields">
    <legend>General Info</legend>
    <div>
      <%= f.input :telephone, as: :tel %>
      <%= f.input :website, placeholder: 'www.website.com' %>
      <%= f.input :category, collection: ['Arts, Crafts, & Collectibles', 'Baby', 'Beauty & Fragrances', 'Books & Magazines', 'Clothing, Accessories, & Shoes', 'Computers, Accessories, & Services', 'Education', 'Electronics & Telecom', 'Entertainment & Media', 'Financial Services', 'Gas Station / Convenience Store', 'Gifts & Flowers', 'Government', 'Grocery Store', 'Health & Personal Care', 'Heating & Air Service', 'Home Construction, Repair, & Maintenance', 'Hotel', 'Industrial', 'Insurance Services', 'Legal Services', 'Nightlife', 'Nonprofit', 'Pets & Animals', 'Real Estate Services', 'Religion', 'Restaurant', 'Retail', 'Services - Other', 'Sports & Outdoors', 'Toys & Hobbies', 'Vehicle Sales', 'Vehicle Service & Accessories'] %>
    </div>
  </fieldset>
    
  <p>
    <%= f.submit :class => 'btn btn-primary' %> <%= link_to('Cancel', businesses_path, :class => 'btn btn-primary')  %>
  </p>
<% end %>