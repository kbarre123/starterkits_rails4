<%= simple_form_for @business do |f| %>
  <% if @business.errors.any? %>
  <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains <%=  pluralize(@business.errors.count, "error") %>!
      </div>
      <ul>
        <% @business.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.input :title %>
  </p>
 
  <p>
    <%= f.input :text %>
  </p>
 
  <p>
    <%= f.button :submit %>
  </p>
<% end %>