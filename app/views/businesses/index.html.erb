<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="bus_name">Business List</h1>

    <form role="form">
      <%= form_tag businesses_path, method: 'get' do %>
        <div class="form-group search-group">
          <p>
            <%= text_field_tag :search, params[:search], placeholder: 'Search...', :class => "form-control" %>  
          </p>
          <p>
            <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
              Search <span class="glyphicon glyphicon-search"></span> 
            <% end %>
            <%= submit_tag "Clear", :class => "btn btn-default" %>
          </p>
        </div>
      <% end %>
    </form>
    
    <hr>
    
    <div id="businesses">
      <%= render 'businesses' %>
    </div>
    <p class="add_business">
      <% if can? :create, @business %>
          <%= link_to('Add Business', new_business_path, :class => 'btn btn-primary') %>
      <% end %>  
    </p>
  </div><!-- col -->
</div><!-- row -->
