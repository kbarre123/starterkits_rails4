<div class="row">
  <div class="col-md-12">
    <div class="well">
      <h2>Add a review:</h2>
      <%= simple_form_for([@business, @business.reviews.build]) do |f| %>
        <%= f.error_notification %>
        <p>
          <%= f.input :review %>
        </p>
        <p>
          <%= f.input :rating, collection: 1..10 %>
        </p>
        <p>
          <%= f.submit :class => 'btn btn-primary' %>
        </p>
      <% end %> 
      <%= link_to('Back', businesses_path, :class => 'btn btn-primary')  %>
    </div><!-- well -->
  </div><!-- col-md-8 -->
