<div class="row">
  <div class="col-sm-12 col-md-6">
    <div class="jumbotron" id="bus_well">
      <h3 class="bus_name">
        <strong><%= @business.title %></strong>
      </h3>
      <!--<p> Facebook 'Like/Share' button. Related JS in business.js 
        <div
          class="fb-like"
          data-share="true"
          data-width="450"
          data-show-faces="true">
        </div>
      </p>-->
      <p>
        <strong>Average Rating: </strong><%= number_with_precision(
              @business.reviews.average("rating"), :precision => 2 || 0) 
              %>
      </p>
      <p>
        <strong>Address:</strong>
        <span class="center-block"><a href="http://maps.apple.com/?q=<%= @business.title %>%20<%= @business.city %>,%20<%= @business.state %>%20<%= @business.zip_code %>&z=14">
          
          <%= @business.street %><br>
          <%= @business.city %>, 
          <%= @business.state %>  
          <%= @business.zip_code %>
        </a></span>
      </p>
      <p>
        <strong>Telephone:</strong>
        <%= @business.telephone %>
      </p>
      <% if @business.website.blank? %>
            
      <% else %>
        <p>
          <strong>Website:</strong>
          <a href="http://<%= @business.website %>" target="blank">Link</a>
        </p>
      <% end %>
      <p>
        <strong>Category:</strong>
        <%= @business.category %>
      </p>
    </div><!-- Jumbotron -->
    <div>
      <%= render 'businesses/questions' %>  
    </div>
  </div><!-- col-sm-12 col-md-6 -->
  <div class="col-sm-12 col-md-6">
    <!-- Main Map -->
      <!-- This is a static googleMap to serve as a placeholder until I can get gmaps4rails working. -->
      <div id="map" style='width: 100%;'>
        <a href="http://maps.apple.com/?q=<%= @business.title %>%20<%= @business.city %>%20<%= @business.state %>%20<%= @business.zip_code %>&z=17"><img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @business.latitude %>,<%= @business.longitude %>&zoom=15&size=560x400&maptype=roadmap&markers=color:red%7C<%= @business.latitude %>,<%= @business.longitude %>" class="img-responsive img-rounded map">  
        </a>
    </div>
    <!-- Street View Pic -->
    <div>
      <a href="http://maps.googleapis.com/maps/api/streetview?size=500x500&location=<%= @business.latitude %>,<%= @business.longitude %>&fov=90&heading=<%= @business.map_heading %>&pitch=10"><img src="http://maps.googleapis.com/maps/api/streetview?size=560x242&location=<%= @business.latitude %>,<%= @business.longitude %>&fov=90&heading=<%= @business.map_heading %>&pitch=10" class="bus_thumb img-responsive img-rounded"></a>
    </div>
    <br>
  </div><!-- col-sm-12 col-md-6 -->
</div><!-- row -->
<div class="row">
  <div class="col-sm-12">
    <div class="review_well">
      <h2>Add a review:</h2>
      <%= simple_form_for([@business, @business.reviews.build]) do |f| %>
        <%= f.error_notification %>
        <p>
          <%= f.input :review, placeholder: 'New review...', :input_html => { :rows => 5 } %>
        </p>
        <p>
          <%= f.input :rating, collection: 1..10 %>
        </p>
        <p>
          <%= f.submit :class => 'btn btn-primary' %> <span class="review_back_btn"><%= link_to('Back to List', businesses_path, :class => 'btn btn-primary')  %></span>

        </p>
      <% end %> 
    </div><!-- well -->
  </div><!-- col-sm-12 -->
</div><!-- row -->
<div class="row">
  <div class="col-sm-12">
    <h2 class="bus_name">Reviews</h2>
    <% if @business.reviews.count == 0 %>
      <div class="well">
        <p class="bus_name_home">
          Be the first to review <%= @business.title %>!
        </p>  
      </div>
    <% else %>
      <%= render 'reviews/review' %>
      <div class="pagination">
        <%= will_paginate @reviews, renderer: BootstrapPagination::Rails %>
      </div>
    <% end %>
    
  </div><!-- col-sm-12 -->
</div>
