<div class="well">
	<%= simple_form_for([@post]) do |f| %>
	  <%= f.error_notification %>
	  <fieldset class="fields">
	    <p>
	      <%= f.input :text, label: false, :input_html => { :rows => 10 }  %>
	    </p>
	    <p>
	      <%= f.submit :class => 'btn btn-success' %> <%= link_to('Cancel', posts_path, :class => 'btn btn-danger')  %>
	    </p>
	  </fieldset>
	<% end %>
</div>