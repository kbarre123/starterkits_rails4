<div class="well">
  <%= simple_form_for(@review) do |f| %>
    <%= f.error_notification %>
    <fieldset class="fields">
      <p>
        <%= f.input :review, placeholder: 'New review...', :input_html => { :rows => 10 }, label: false %>
      </p>
      <p>
        <%= f.input :rating, collection: 1..10, label: false %>
      </p>
      <p>
        <%= f.submit :class => 'btn btn-primary' %> <%= link_to('Cancel', review_path(@review), :class => 'btn btn-primary')  %>
      </p>
    </fieldset>
  <% end %>
</div>
