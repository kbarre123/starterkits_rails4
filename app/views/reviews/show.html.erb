<div class="row">
  <div class="col-sm-12">
    <div class="review_well">
      <p><%= @review.review %></p>
      <p>
        <%= render 'users/avatar', user: @review.user %> - <span class="reviewer_quote"><%= @review.user.first_name %> <%= @review.user.last_name %></span>
      </p>
      <span class = "timestamp">
        reviewed <%= time_ago_in_words(@review.created_at) %> ago.
      </span>
      <p>
        <% if can? :update, @review %>
          <%= link_to "Edit", edit_business_review_path([@business, @review]) %> | 
          <%= link_to "Destroy", business_review_path([@business, @review]), data: { confirm: 'Are you sure?' }, method: :delete %></br>
        <% end %>
      </p>
      <%= simple_form_for([@commentable, @comment]) do |f| %> <!-- added @business here. remove to have posts work again -->
        <%= f.error_notification %>
        <p>
          <%= f.input :text, placeholder: 'New comment...', label: false  %>
        </p>
        <p>
          <%= f.submit :class => 'btn btn-primary' %>
          <%= link_to('Back to reviews', business_path(@business), :class => 'btn btn-primary')  %>
        </p>
      <% end %>
    </div>
  </div>
</div>
