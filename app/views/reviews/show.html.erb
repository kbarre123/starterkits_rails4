<div class="row">
  <div class="col-sm-12">
    <div class="review_well">
      <p><%= @review.review %></p>
      <p>
        <%= render 'users/avatar', user: @review.user %> - <span class="reviewer_quote"><%= @review.user.first_name %> <%= @review.user.last_name %></span>
      </p>
      <span class = "timestamp">
        reviewed <%= time_ago_in_words(@review.created_at) %> ago.
      </span>
      <% if can? :manage, @review %>    
        <%= link_to "Edit", [:edit, @review.business, @review]%> | 
        <%= link_to "Delete", [@review.business, @review], method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= simple_form_for([@review.business, @commentable, @comment]) do |f| %> <!-- added @business here. remove to have posts work again -->
        <%= f.error_notification %>
        <p>
          <%= f.input :text, placeholder: 'New comment...', label: false  %>
        </p>
        <p>
          <%= f.submit :class => 'btn btn-primary' %>
          <%= link_to('Back', business_path(@business), :class => 'btn btn-primary')  %>
        </p>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <% if @review.comments.count == 0 %>

    <% else %>
      <%= render "comments/comment" %>
      <div class="pagination">
        <%= will_paginate @comments, renderer: BootstrapPagination::Rails %>
      </div>
    <% end %>  
  </div>
</div>

